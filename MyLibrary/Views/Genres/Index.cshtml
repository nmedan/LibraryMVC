@model IPagedList<MyLibrary.Models.Genre>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Index";
}

<h2>Genres</h2>

<table class="table">
    <tr>
        <td><b>Name</b></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <button class="btn btn-primary">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "link" })
                </button>

                <button class="btn btn-info">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "link" })
                </button>

                <button class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id },
                    new { onclick = "return confirm('Are you sure you want to delete?');", @class = "link" })
                </button>
            </td>
        </tr>

    }

</table>

<button class="btn btn-primary">@Html.ActionLink("Add new genre", "Create", "", new { @class = "link" })</button>

<p>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</p>